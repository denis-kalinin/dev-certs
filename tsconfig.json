{
    "compilerOptions": {
        "alwaysStrict": false,
        "declaration": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "newLine": "lf",
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": [
            "node"
        ],
        "noImplicitUseStrict": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib",
    ]
}